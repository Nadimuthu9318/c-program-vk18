#include <stdio.h>

int main() {
    int N;
    
    // Read the size of the array
    if (scanf("%d", &N) != 1) return 0;

    int arr[N];

    // Store the elements in the array
    for (int i = 0; i < N; i++) {
        scanf("%d", &arr[i]);
    }

    int isPalindrome = 1; // Assume it is a palindrome (YES)

    // Compare elements from both ends moving towards the middle
    for (int i = 0; i < N / 2; i++) {
        // Compare index i with index (N - 1 - i)
        if (arr[i] != arr[N - 1 - i]) {
            isPalindrome = 0; // Mirror broken!
            break;
        }
    }

    // Output the result based on our findings
    if (isPalindrome) {
        printf("YES\n");
    } else {
        printf("NO\n");
    }

    return 0;
}
